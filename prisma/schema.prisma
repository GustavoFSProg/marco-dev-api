// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE")
}

model Users {
  id          String   @id @default(uuid()) @map("_id")
  email String 
  name String?
  password String
}

model Products {
  id        String   @id @default(uuid()) @map("_id")
  title     String
  image     String
  price     Float
  category String? @default("Categoria 1")
  desc String? @default("desc 1")
}


model Categorys {
  id        String   @id @default(uuid()) @map("_id")
  name     String

}